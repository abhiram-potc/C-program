#include<stdio.h>
#include<stdlib.h>
int main()
{
    int c,d,max,i;
    char ch,x,y;
    system("clear");
    printf("***Stack OPeration***\n\n");
    printf("Enter limit: ");
    scanf("%d",&max);
    int stack[max], top=-1;
    do
    {
        printf("1. PUSH\n2. POP\n3. DISPLAY\n4. EXIT");
        printf("\nEnter your choice: ");
        scanf("%d",&c);
        switch(c)
        {
            case 1:
            printf("Enter the element: ");
            scanf("%d",&d);
            if(top==max-1)
            {
                printf("Overflow\n");
            }
            else
            {
                top++;
                stack[top]=d;
            }
            break;


            case 2:
            if(top==-1)
            {
                printf("Underflow\n");
            }
            else
            {
                d=stack[top];
                top--;
                printf("\nDeleted value: %d\n",d);

            }
            break;


            case 3:
            if(top==-1)
            {
                printf("Underflow");
            }
            else
            {
                printf("Stack elements are:\n");
                for(i=0;i<=top;i++)
                {
                    if(i==0)
                    {
                        printf("%d  bottom\n",stack[i]);
                    }
                    else if(i==top)
                    {
                        printf("%d  top\n",stack[i]);
                    }
                    else
                    {
                        printf("%d\n",stack[i]);
                    }
                }
            }
            break;

            case 4:
            exit(0);
            break;
            default:
            printf("wrong choice\n");
        }
        printf("\nDo you want to continue? (y/n)");
        scanf("%s",&ch);
    }
    while(ch=='Y'||ch=='y');
    return 0;
}
